@model Web.Models.Location

@{
    ViewBag.Title = "Location Details";
}

<h2>@ViewBag.Title</h2>

<fieldset>
    <legend>Location</legend>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Name)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.AddedBy)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.AddedBy)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Routes)
    </div>
    @foreach (var item in Model.Routes)
    {
        <div class="display-field">
            @Html.DisplayFor(modelItems => item)
        </div>
    }
</fieldset>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
